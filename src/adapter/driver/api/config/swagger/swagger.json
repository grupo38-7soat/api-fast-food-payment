{
    "openapi": "3.0.0",
    "info": {
      "title": "Fast Food | Pagamento",
      "version": "1.0.0",
      "description": "Documentation for your API"
    },
    "baseUrl": "http://localhost:3000",
    "tags": [
      {
        "name": "Pagamento"
      }
    ],
    "paths": {
      "/health": {
        "get": {
          "tags": [
            "Health"
          ],
          "summary": "Valida a saúde da aplicação",
          "operationId": "check",
          "responses": {
            "200": {
              "description": "Status da aplicação",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/SuccessHealthCheckResponseBody"
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorHealthCheckResponseBody"
                  }
                }
              }
            }
          }
        }
      },
      "/checkout": {
        "post": {
          "tags": [
            "Pedido"
          ],
          "summary": "Realiza um checkout",
          "operationId": "CreatePayment",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatePaymentRequestBody"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Lista de pedidos",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/CreatePaymentResponseBody"
                  }
                }
              }
            },
            "400": {
              "description": "Erro na requisição",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            },
            "404": {
              "description": "Recurso não encontrado",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/NotFoundErrorResponse"
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            }
          }
        }
      },

 
      "/pedidos/{id}/pagamento": {
        "get": {
          "tags": [
            "Pedido"
          ],
          "summary": "Busca os detalhes do pagamento do pedido",
          "operationId": "getPayment",
          "parameters": [
            {
              "name": "id",
              "description": "Id do pedido",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Informação do pagamento",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/GetPaymentResponseBody"
                  }
                }
              }
            },
            "400": {
              "description": "Erro na requisição",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            },
            "404": {
              "description": "Erro na requisição",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/NotFoundErrorResponse"
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            }
          }
        }
      },
      "/pedidos/webhook-pagamento": {
        "post": {
          "tags": [
            "Pedido"
          ],
          "summary": "Recebe atualizações do pagamento vindas do Mercado Pago",
          "operationId": "listenPayment",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ListenPaymentRequestBody"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Informação do status",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ListenPaymentResponseBody"
                  }
                }
              }
            },
            "400": {
              "description": "Erro na requisição",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            },
            "500": {
              "description": "Erro interno do servidor",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/DefaultErrorResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "SuccessHealthCheckResponseBody": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "description": "Status atual da aplicação",
                  "example": "HEALTH"
                },
                "stage": {
                  "type": "string",
                  "description": "Ambiente da aplicação",
                  "example": "DEVELOPMENT"
                }
              }
            }
          }
        },
        "ErrorHealthCheckResponseBody": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "description": "Status atual da aplicação",
                  "example": "UNHEALTH"
                },
                "stage": {
                  "type": "string",
                  "description": "Ambiente da aplicação",
                  "example": "DEVELOPMENT"
                },
                "info": {
                  "type": "object",
                  "properties": {
                    "database": {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string",
                          "description": "Status do banco de dados",
                          "example": "DOWN"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
      
        "CreatePaymentRequestBody": {
          "type": "object",
          "properties": {
            "customerId": {
              "type": "string",
              "description": "Id do cliente",
              "example": "1c014ba2-4000-4d40-be1e-352e29d07d89"
            },
            "items": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "int",
                    "description": "Id do produto",
                    "example": 1
                  },
                  "quantity": {
                    "type": "int",
                    "description": "Quantidade do produto",
                    "example": 1
                  },
                  "observation": {
                    "type": "string",
                    "description": "Observações gerais no produto",
                    "example": "Tirar cebola"
                  }
                }
              }
            },
            "orderAmount": {
              "type": "double",
              "description": "Valor total do pedido",
              "example": 14.99
            },
            "payment": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "DINHEIRO",
                    "CARTAO_CREDITO",
                    "CARTAO_DEBITO",
                    "PIX",
                    "VALE_REFEICAO"
                  ],
                  "description": "Tipo de pagamento",
                  "example": "CARTAO_CREDITO"
                }
              }
            }
          },
          "required": [
            "items",
            "orderAmount",
            "payment"
          ]
        },
        "CreatePaymentResponseBody": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "order": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "int",
                      "description": "Id do pedido",
                      "example": 1
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "RECEBIDO",
                        "EM_PREPARO",
                        "PRONTO",
                        "FINALIZADO",
                        "CANCELADO"
                      ],
                      "description": "Status de andamento do pedido",
                      "example": "RECEBIDO"
                    },
                    "effectiveDate": {
                      "type": "date",
                      "description": "Data de criação do pedido",
                      "example": "2024-05-28T22:23:31.742Z"
                    },
                    "totalAmount": {
                      "type": "double",
                      "description": "Valor total do pedido",
                      "example": 14.99
                    }
                  }
                },
                "payment": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Id do pagamento",
                      "example": "f76408cc-f92a-419f-87f7-8e5fa451e34b"
                    },
                    "status": {
                      "type": "string",
                      "enum": [
                        "PENDENTE",
                        "AUTORIZADO",
                        "REJEITADO",
                        "REEMBOLSADO"
                      ],
                      "description": "Status de pagamento",
                      "example": "PENDENTE"
                    },
                    "type": {
                      "enum": [
                        "DINHEIRO",
                        "CARTAO_CREDITO",
                        "CARTAO_DEBITO",
                        "PIX",
                        "VALE_REFEICAO"
                      ],
                      "description": "Tipo de pagamento",
                      "example": "CARTAO_CREDITO"
                    }
                  }
                },
                "customer": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string",
                      "description": "Id do cliente",
                      "example": "1c014ba2-4000-4d40-be1e-352e29d07d89"
                    },
                    "document": {
                      "type": "string",
                      "description": "CPF do cliente",
                      "example": "12345678911"
                    },
                    "email": {
                      "type": "string",
                      "description": "E-mail do cliente",
                      "example": "teste@email.com"
                    },
                    "name": {
                      "type": "string",
                      "description": "Nome do cliente",
                      "example": "Teste"
                    }
                  }
                }
              }
            }
          }
        },
       
        "GetPaymentResponseBody": {
          "type": "object",
          "properties": {
            "data": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Id do pagamento",
                  "example": "f76408cc-f92a-419f-87f7-8e5fa451e34b"
                },
                "status": {
                  "type": "string",
                  "enum": [
                    "PENDENTE",
                    "AUTORIZADO",
                    "REJEITADO",
                    "REEMBOLSADO"
                  ],
                  "description": "Status de pagamento",
                  "example": "PENDENTE"
                },
                "type": {
                  "enum": [
                    "DINHEIRO",
                    "CARTAO_CREDITO",
                    "CARTAO_DEBITO",
                    "PIX",
                    "VALE_REFEICAO"
                  ],
                  "description": "Tipo de pagamento",
                  "example": "PIX"
                },
                "effectiveDate": {
                  "type": "date",
                  "description": "Data de criação do pedido",
                  "example": "2024-05-28T22:23:31.742Z"
                },
                "externalId": {
                  "type": "string",
                  "description": "Id do pagamento do Mercado Pago",
                  "example": "1325544717"
                }
              }
            }
          }
        },
        "ListenPaymentRequestBody": {
          "type": "object",
          "properties": {
            "action": {
              "type": "string",
              "description": "Ação do evento recebido",
              "example": "payment.created"
            },
            "data": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Id do pagamento do Mercado Pago",
                  "example": "1325544717"
                }
              }
            }
          }
        },
        "ListenPaymentResponseBody": {
          "type": "object",
          "properties": {
            "data": {
              "type": "string",
              "description": "Mensagem de sucesso",
              "example": "OK"
            }
          }
        },
        "DefaultErrorResponse": {
          "type": "object",
          "properties": {
            "error": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Mensagem do erro",
                  "example": "Algum erro aconteceu"
                },
                "cause": {
                  "type": "string",
                  "description": "Motivo do erro",
                  "example": "UNKNOWN_EXCEPTION"
                }
              }
            }
          }
        },
        "NotFoundErrorResponse": {
          "type": "object",
          "properties": {
            "error": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "description": "Mensagem do erro",
                  "example": "Recurso não encontrado"
                },
                "cause": {
                  "type": "string",
                  "description": "Motivo do erro",
                  "example": "NOTFOUND_EXCEPTION"
                }
              }
            }
          }
        }
      }
    }
  }
