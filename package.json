{
  "name": "project",
  "version": "0.0.1",
  "main": "main.ts",
  "repository": "git@github.com:grupo38-7soat/api-fast-food-payment.git",
  "author": "Grupo 38",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc && tsc-alias",
    "start:dev": "SET NODE_ENV=development && ts-node-dev -r tsconfig-paths/register ./src/bootstrap.ts",
    "start": "SET NODE_ENV=production && npm run build && node dist/bootstrap.js",
    "start:prod": "SET NODE_ENV=production && npm start",
    "test": "SET NODE_ENV=development && jest --noStackTrace --runInBand --passWithNoTests --silent --forceExit",
    "test:watch": "SET NODE_ENV=development && jest --noStackTrace --runInBand --passWithNoTests --verbose --watch",
    "test:cov": "npm test -- --coverage --no-cache",
    "lint": "npx eslint --fix --ignore-path .eslintignore --ext .js,.ts ."
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "pg": "^8.13.1",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.3",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-n": "^17.14.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.2.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
